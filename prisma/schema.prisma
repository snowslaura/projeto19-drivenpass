// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user{
  id Int @id @default(autoincrement())
  name String 
  email String @unique
  password String
  credentials credentials[]
  safeNotes safeNotes[]
  cards cards[]
  wifi wifi[]
  createdAt DateTime @default(now())
}

model credentials{
  id Int @id @default(autoincrement()) 
  user user @relation(fields: [userId], references: [id])
  userId Int
  title String 
  url String  
  userName String
  password String
  createdAt DateTime @default(now())

  @@unique([userId, title])
}

model safeNotes{
  id Int @id @default(autoincrement())
  user user @relation(fields: [userId], references: [id]) 
  userId Int
  title String @db.VarChar(50)
  note String @db.VarChar(1000)
  createdAt DateTime @default(now())

  @@unique([userId, title])
}

enum Type{
  CREDIT
  DEBIT
  BOTH
}

model cards{
  id Int @id @default(autoincrement())
  user user @relation(fields: [userId], references: [id]) 
  userId Int
  title String
  number String 
  name String
  CVV String
  password String
  ExpirationDate DateTime
  isVirtual Boolean
  type Type 
  createdAt DateTime @default(now())

  @@unique([userId, title])
}

model wifi{
  id Int @id @default(autoincrement())
  user user @relation(fields: [userId], references: [id]) 
  userId Int
  title String 
  networkName String
  password String

  @@unique([userId, title])
}


